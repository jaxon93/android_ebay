<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@android:color/black">

    <ImageView
        android:id="@+id/iv_deals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/deals_product1"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_deal_title"
        android:layout_marginTop="5dp"
        android:textColor="#90ffffff"
        android:textSize="15sp"
        android:maxLines="3"
        android:text="AKG Y500 Wireless Bluetooth On-ear Headphones with Unicersal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_discount_price"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="$199.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_real_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$279.00"
            android:textSize="13sp"
            android:textColor="#70ffffff"
            android:background="@drawable/stricking_text"
            android:foreground="@drawable/stricking_text" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  - 29% OFF"
            android:textSize="13sp"
            android:textColor="#70ffffff"/>

    </LinearLayout>

</LinearLayout>